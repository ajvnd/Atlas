@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coming Soon</title>
    <link rel="dx-theme" data-theme="material.teal.light.compact" href="~/lib/devextreme/css/dx.material.teal.light.compact.css" data-active="true">
    <link rel="dx-theme" data-theme="material.teal.dark.compact" href="~/lib/devextreme/css/dx.material.teal.dark.compact.css" data-active="false">
    <link rel="stylesheet" href="/css/style.css" asp-append-version="true">
</head>
<body>

<div class="container">
    <div class="header">
        <div class="atlas-toolbar"></div>
        <div class="atlas-menu-container dx-theme-accent-as-background-color">
            <div class="atlas-menu dx-widget">محصولات</div>
            <div class="atlas-menu dx-widget">محققین</div>
            <div class="atlas-menu dx-widget">موسسات آموزشی</div>
            <div class="atlas-menu dx-widget">شرکت ها</div>

        </div>
    </div>
    <div class="body">
        <h1 class="dx-widget" style="font-size: 40px">بزودی</h1>
        <p class="dx-widget">ما در حال کار روی یک چیز عالی هستیم. منتظر باشید!</p>
        @RenderBody()
    </div>
    <div class="footer dx-theme-accent-as-background-color">
        <div class="dx-widget" style="color: white;padding: 5px">
        تمامی حقوق محفوظ است
            
        </div>
    </div>
</div>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/devextreme/js/dx.all.js"></script>
<script type="text/javascript">
    DevExpress.config({
        rtlEnabled:true,
        editorStylingMode:"outlined",
    })
    $(function (){
      $(".atlas-toolbar").dxToolbar({
        items:[{
          widget:'dxMenu',
          location:'before',
          options:
            {
            displayExpr: 'name',
            cssClass:'atlas-menu-content',
            dataSource:[
                      {
                         id: '1',
                         name: 'اطلس',
                       }, 
                       {
                         id: '1',
                         name: 'راهنما',
                       },
                       {
                         id: '1',
                         name: 'درباره ما',
                       },
                    ]
,
            width:"100%"
        }
        },
        {
          widget:'dxTextBox',
          location: "after",
          options: {
            width: '20vw',
            buttons:[
                {
                    name:'search',
                    options:{
                        icon:'find'
                    }
                }
            ]
          }
        },
        {
          widget: 'dxButton',
          location: 'after',
          options: {
              icon:'login',
              text:'ورود'
          }
        }]
      });
    });
</script>
</body>
</html>